<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_rootpromotion"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/card_viewpromotion"
        android:layout_width="wrap_content"
        android:layout_height="220dp"
        android:layout_gravity="center"
        card_view:cardCornerRadius="2dp">

        <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/eventlistlayoutpromotion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/promotionImage"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:src="@drawable/sale" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/shadow" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="false"
                android:layout_gravity="bottom|left"
                android:layout_marginLeft="15dp"
                android:layout_marginBottom="50dp"
                android:orientation="horizontal"
                android:weightSum="1">

                <LinearLayout
                    android:id="@+id/linearLayout"
                    android:layout_width="270dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:weightSum="1">

                    <TextView
                        android:id="@+id/partyNamePromotion"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left|center_vertical"
                        android:text="Party Name"
                        android:textColor="#F0F8FF"
                        android:textSize="30sp" />


                    <TextView
                        android:id="@+id/promotionType"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left|center_vertical"
                        android:focusableInTouchMode="false"
                        android:text="Type"
                        android:textColor="#F0F8FF"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/promotionDescription"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left|center_vertical"
                        android:focusableInTouchMode="false"
                        android:text="Description"
                        android:textColor="#F0F8FF"
                        android:textSize="20sp" />
                </LinearLayout>

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@android:drawable/ic_menu_edit"
                    android:id="@+id/editPromotion"
                    android:background="@android:color/transparent"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:clickable="false" />

                <ImageButton
                    android:src="@android:drawable/ic_menu_delete"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/deletePromotion"
                    android:background="@android:color/transparent"
                    android:layout_gravity="center_vertical|center_horizontal|center"
                    android:layout_marginLeft="10dp"
                    android:clickable="false" />

            </LinearLayout>

        </FrameLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>
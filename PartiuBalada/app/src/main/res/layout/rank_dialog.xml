<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="wrap_content"
              android:layout_height="fill_parent"
              android:orientation="vertical"
    >

    <TextView
        android:id="@+id/rank_dialog_text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:text="Quantas estrelas essa balada merece?"
        android:textAlignment="center"
        android:textColor="#ffffff"
        android:textSize="24dp"/>

    <RatingBar
        android:id="@+id/dialog_ratingbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:clickable="true"
        android:isIndicator="false"
        android:numStars="5"
        android:progressTint="#dde541"
        android:rating="2.5"
        android:stepSize="0.5"
        android:secondaryProgressTint="#1c1c17"/>

    <Button
        android:id="@+id/rank_dialog_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="15dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/round_rect_button"
        android:padding="20dp"
        android:singleLine="false"
        android:text="Enviar"
        android:textColor="#ffffff"
        android:textColorHighlight="#19438a"
        android:textSize="25dp"/>

</LinearLayout>